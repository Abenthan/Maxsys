<div class="container">
    <div class="row">
        <div class="col">
            <div class="m-2 text-center">
                <h3>Requerimientos del usuario</h3>
            </div>
            <div class="p-2">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Cuenta</th>
                            <th>Asunto</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each requerimientos}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{asunto}}</td>
                            <td>{{estado}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>