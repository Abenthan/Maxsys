<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center">
                <h3 class="m-2">Nuevo Recurso Informático</h3>
            </div>
            <form action="/recursos/nuevoRecurso" method="POST">
                <div class="col-md-10 form-group">
                    <label for="nombreRecurso">Nombre del recurso</label>
                    <input type="text" 
                        name="nombreRecurso" 
                        id="nombreRecurso" 
                        class="form-control"
                        placeholder="Nombre del recurso"
                        required autofocus>
                </div>

                <div class="col-md-10 form-group">
                    <label for="tipoRecurso">Tipo del recurso</label>
                    <input type="text" 
                        name="tipoRecurso" 
                        id="tipoRecurso" 
                        class="form-control"
                        placeholder="Computador, Impresora, Dispositivos de infraestructura de red, etc."
                        required>
                </div>

                <div class="col-md-4 form-group">
                    <label for="codigo">Codigo Asignado</label>
                    <input type="text" 
                        name="codigo" 
                        id="codigo" 
                        class="form-control"
                        placeholder="Codigo">
                </div>
                <div class="col-md-4 form-group">
                    <label for="serial">Serial del equipo</label>
                    <input type="text" 
                        name="serial" 
                        id="serial" 
                        class="form-control"
                        placeholder="Serial">
                </div>
                <div class="col-md-4 form-group">
                    <label for="estado">Estado del recurso</label>
                    <select name="estado" id="estado" class="form-control">
                        <option value="Disponible">Disponible</option>
                        <option value="En uso">En uso</option>
                        <option value="En mantenimiento">En mantenimiento</option>
                        <option value="Obsoleto">Obsoleto</option>
                    </select>
                </div>
                <div class="col-md-12 form-group">
                    <label for="descripcionRecurso">Descripción del recurso</label>
                    <textarea name="descripcionRecurso" id="descripcionRecurso" class="form-control"
                        placeholder="Especificaciones del recurso, marca, modelo, referencia"></textarea>
                </div>

                <div class="col-md-12 form-group">
                    <label for="observaciones">Observaciones</label>
                    <textarea name="observaciones" id="observaciones" class="form-control"
                        placeholder="Observaciones"></textarea>
                </div>
                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                        <a href="/recursos" class="btn btn-danger mx-2">Cancelar</a>
                    </div>

            </form>
        </div>

    </div>

</div>