<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center">
                <h4>Intervenciones por requerimiento</h4>
            </div>
            <div class="text-center"> {{!-- titulo --}}
                <p><strong>{{requerimiento.nombreCuenta}}</strong></p>
                <br>
                <p>Requerimiento #: <strong>{{requerimiento.idRequerimiento}}</strong> - Asunto: <strong>{{requerimiento.asunto}}</strong></p>
                <br>
            </div>
            <div class="m-2"> {{!-- botones --}}
                <a href="/intervenciones/nuevaIntervencion/{{requerimiento.idRequerimiento}}" class="btn btn-outline-info">
                    <i class="fas fa-plus"></i>
                    Nueva Intervenci√≥n               
                </a>
                <a href="/requerimientos/requerimiento/{{requerimiento.idRequerimiento}}" class="btn btn-outline-info">
                    Editar Requerimiento
                </a>
            </div>
            <div class="table-responsive"> {{!-- tabla de intervenciones --}}
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Intervencion</th>
                            <th>Recurso</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each intervenciones}}
                        <tr>
                            <td>{{idIntervencion}}</td>
                            <td>{{nombreIntervencion}}</td>
                            <td>{{nombreRecurso}}</td>
                            <td>{{fechaIntervencion}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
        </div>
    </div>
</div>