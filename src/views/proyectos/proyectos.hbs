<div class="container">
    <div class="row">
        <div class="col">

            <div class="m-2 text-center"> {{!-- titulo --}}
                <h3>Proyectos</h3>
            </div>

            <div> {{!-- botones o enlaces --}}
                <a href="/proyectos/nuevoProyecto/" class="btn btn-outline-info" >
                    Nuevo Proyecto
                </a>
            </div>

            <div class="p-2">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Nombre de proyecto</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each proyectos}}
                        <tr>
                            <td><a href="/proyectos/proyecto/{{idProyecto}}">{{idProyecto}}</a></td>
                            <td><a href="/requerimientos/listarXProyecto/{{idProyecto}}">{{nombreProyecto}}</a></td>
                            <td>{{estadoProyecto}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>


        </div>
    </div>

</div>